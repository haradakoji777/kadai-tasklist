<h1>タスクリスト</h1> 

<% if logged_in? %>
 <ul class="list-unstyled">
  <ul>
  <% @tasks.each do |task| %>
    <li><%= link_to task.id, task %> : <%= task.content %> : <%= task.status %></li>
  <% end %>
　</ul>

  <p>ログイン完了ユーザ: <%= current_user.name %></p>
  <%= link_to 'Logout', logout_path, method: :delete %>
  <%= link_to '新規タスクの投稿', new_task_path %>

<% else %>
<div class="center jumbotron">
  <div class="text-center">
    
    <%= link_to 'ユーザー新規作成', signup_path, class: 'btn btn-lg btn-primary' %>
    <%= link_to 'ログイン', login_path, class: 'btn btn-lg btn-primary' %>
  </div>
</div>
<% end %>